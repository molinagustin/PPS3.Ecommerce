        </MudNavGroup>

        <MudNavGroup Title="Techo" Icon="@Icons.Filled.Receipt">
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.ViewList">Tipo Techo 1</MudNavLink>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.AddCircle">Tipo Techo 2</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>

@code{
    [Parameter]
    public bool SideBarOpen { get; set; }
}