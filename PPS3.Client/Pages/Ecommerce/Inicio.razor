                            </MudItem>
                            <MudItem xs="4">
                                <MudText Color="Color.Success"><b>@prod.Bonificacion % Bonif.</b></MudText>
                            </MudItem>
                        </MudGrid>

                        <MudText Typo="Typo.body1" Align="Align.Center">
                            @if (prod.Bonificacion < 100)
                            {
