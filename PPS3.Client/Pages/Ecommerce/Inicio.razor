                    }
                </MudCardContent>
                <MudCardActions>
                    <MudGrid>
                        <MudItem xs="4"></MudItem>
                        <MudItem xs="4">
                            <MudButton OnClick="@(() => VerProducto(prod.IdProducto))" Style="margin-bottom:10px;" FullWidth=true Color="Color.Primary">¡VER!</MudButton>
                        </MudItem>
                        <MudItem xs="4"></MudItem>                       
